%div
  %h1=@entry.title
  %p Authors
  - @entry.users.each do |user|
    %p.user=user.email
  %p=@entry.date
  %p=@entry.contents
  %p=link_to('Edit this entry', edit_entry_path(@entry))
  %p=link_to('Delete this entry', entry_path(@entry), method: :delete)
  %p=link_to('Back to all entries', entries_path)